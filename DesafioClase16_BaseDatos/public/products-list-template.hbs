<details>
    <summary class="h2 mt-5">Listado de productos</summary>
    {{#if products.length }}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Fotografia</th>
                    <th>Precio</th>
                    <th>Accion</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th>{{id}}</th>
                    <td>{{title}}</td>
                    <td><img class="img-fluid" src="{{thumbnail}}" width="30px"></td>
                    <td>$ {{price}}</td>
                    <td><button class="btn btn-danger btn-sm" onclick="deleteProduct({{id}});" >Eliminar</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{^}}
        <div class="alert alert-danger text-center my-5 p-3">No hay productos disponibles</div>
    {{/if}}
</details>