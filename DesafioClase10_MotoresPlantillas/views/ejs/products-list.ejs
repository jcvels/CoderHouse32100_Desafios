<%- include('head.ejs') %>
<%- include('navbar.ejs') %>

<div class="container">
    <h2 class="mt-5 mb-3">Listado de productos</h2>
    <% if(products.length > 0) { %>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Producto</th>
                <th>Fotografia</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach( function(product) { %>
            <tr>
                <th><%= product.id %></th>
                <td><%= product.title %></td>
                <td><img class="img-fluid" src="<%= product.thumbnail %>" width="70px"></td>
                <td>$ <%= product.price %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <div class="alert alert-danger text-center my-5 p-3">No hay productos disponibles</div>
    <% } %>
</div>

<%- include('footer.ejs') %>