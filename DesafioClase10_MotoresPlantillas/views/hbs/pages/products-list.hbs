<div class="container">
    <h2 class="mt-5 mb-3">Listado de productos</h2>
    {{#if products.length }}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Fotografia</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th>{{id}}</th>
                    <td>{{title}}</td>
                    <td><img class="img-fluid" src="{{thumbnail}}" width="70px"></td>
                    <td>$ {{price}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{^}}
        <div class="alert alert-danger text-center my-5 p-3">No hay productos disponibles</div>
    {{/if}}
</div>